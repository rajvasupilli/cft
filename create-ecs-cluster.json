{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "SecurityGroup"                 : {
            "Type" : "AWS::EC2::SecurityGroup",
            "Properties" : {
                "GroupDescription" : "SBT-SecurityGroup",
                "VpcId"            : {
                    "Ref" : "VPC"
                },
                "SecurityGroupIngress" : [
                    {
                        "IpProtocol" : "tcp",
                        "FromPort"   : "8080",
                        "ToPort"     : "8080"
                    }
                ]
            }
        },
        "SBTCluster": {
            "Type": "AWS::ECS::Cluster",
            "Properties": {
                "ClusterName": "SBTCluster"
            }
        }
    }
}
