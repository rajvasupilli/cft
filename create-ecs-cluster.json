{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "IamRoleECS"                      : {
            "Condition" : "EnableBackups",
            "Type"      : "AWS::IAM::Role",
            "Properties" : {
                "AssumeRolePolicyDocument" : {
                    "Version" : "2012-10-17",
                    "Statement" : [
                        {
                            "Effect" : "Allow",
                            "Principal" : {
                                "Service" : [
                                    "ecs.amazonaws.com"
                                ]
                            },
                            "Action"    : [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path"                     : "/",
                "Policies"                 : [
                    {
                        "PolicyName" : "root",
                        "PolicyDocument" : {
                            "Version" : "2012-10-17",
                            "Statement" : [
                                {
                                    "Effect" : "Allow",
                                    "Action" : [
                                        "*"
                                    ],
                                    "Resource" : "*"
                                },
                                {
                                    "Effect" : "Allow",
                                    "Action" : [
                                        "*"
                                    ],
                                    "Resource" : "*"
                                }
                            ]
                        }
                    }
                ]
            }
        },
        "SBTSecurityGroup"                 : {
            "Type" : "AWS::EC2::SecurityGroup",
            "Properties" : {
                "GroupDescription" : "SBTSecurityGroup",
                "VpcId"            : "vpc-0792452e838195c2d",
                "SecurityGroupIngress" : [
                    {
                        "IpProtocol" : "tcp",
                        "FromPort"   : "9000",
                        "ToPort"     : "9000"
                    }
                ]
            }
        },
        "SBTCluster": {
            "Type": "AWS::ECS::Cluster",
            "Properties": {
                "ClusterName": "SBTCluster"
            }
        }
    }
}
